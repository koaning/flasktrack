{{ "{% extends \"layouts/base.html\" %}" }}

{{ "{% block title %}" }}{{ model_name }} #{{ "{{ " }}{{ model_name_lower }}{{ ".id }}" }} - {{ "{{ super() }}" }}{{ "{% endblock %}" }}

{{ "{% block content %}" }}
<div class="container">
    <h1>{{ model_name }} Details</h1>
    
    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID:</dt>
                <dd class="col-sm-9">{{ "{{ " }}{{ model_name_lower }}{{ ".id }}" }}</dd>
                
                {% for field in fields %}
                <dt class="col-sm-3">{{ field.name|capitalize }}:</dt>
                {% if field.is_reference %}
                <dd class="col-sm-9">{{ "{{ " }}{{ model_name_lower }}{{ "." }}{{ field.name }}{{ " if " }}{{ model_name_lower }}{{ "." }}{{ field.name }}{{ " else 'N/A' }}" }}</dd>
                {% else %}
                <dd class="col-sm-9">{{ "{{ " }}{{ model_name_lower }}{{ "." }}{{ field.name }}{{ " }}" }}</dd>
                {% endif %}
                {% endfor %}
                
                <dt class="col-sm-3">Created:</dt>
                <dd class="col-sm-9">{{ "{{ " }}{{ model_name_lower }}{{ ".created_at.strftime('%Y-%m-%d %H:%M:%S') if " }}{{ model_name_lower }}{{ ".created_at else 'N/A' }}" }}</dd>
                
                <dt class="col-sm-3">Updated:</dt>
                <dd class="col-sm-9">{{ "{{ " }}{{ model_name_lower }}{{ ".updated_at.strftime('%Y-%m-%d %H:%M:%S') if " }}{{ model_name_lower }}{{ ".updated_at else 'N/A' }}" }}</dd>
            </dl>
        </div>
    </div>
    
    <div class="actions mt-3">
        <a href="{{ "{{ url_for('" }}{{ model_name_plural }}{{ ".edit', id=" }}{{ model_name_lower }}{{ ".id) }}" }}" class="btn btn-warning">Edit</a>
        <a href="{{ "{{ url_for('" }}{{ model_name_plural }}{{ ".index') }}" }}" class="btn btn-secondary">Back to List</a>
        <form method="POST" action="{{ "{{ url_for('" }}{{ model_name_plural }}{{ ".delete', id=" }}{{ model_name_lower }}{{ ".id) }}" }}" style="display: inline;">
            {{ "{{ csrf_token() }}" }}
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this {{ model_name_lower }}?')">Delete</button>
        </form>
    </div>
</div>
{{ "{% endblock %}" }}
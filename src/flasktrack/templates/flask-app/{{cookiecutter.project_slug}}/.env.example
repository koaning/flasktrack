# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Database Configuration
# DEV_DATABASE_URL=sqlite:///data/{{ cookiecutter.project_slug }}_dev.db
